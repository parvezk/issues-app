{
  "enabled": true,
  "name": "Auto-fix Linting on Save",
  "description": "Automatically runs lint fix when TypeScript/JavaScript files are saved",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx"
    ]
  },
  "then": {
    "type": "shellCommand",
    "command": "npm run lint:fix"
  }
}
